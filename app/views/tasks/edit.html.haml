.container
  %ul
    - @task.errors.full_messages.each do |message|
      %li= message
  %h2 Edit Card
  = form_with(model: [@board, @task], url: board_task_path(@board, @task), method: 'put', local: true) do |f|
    %div
      = f.label :eyecatch, 'eyecatch'
    %div
      = f.file_field :eyecatch, class: 'eyecatch'
    %div
      = f.label :title, 'Title'
    %div
      = f.text_field :title, class: 'text'
    %div
      = f.label :description, 'Description'
    %div
      = f.text_area :description
    %div
      = f.label :end_date, 'Deadline'
    %div
      = f.datetime_select :end_date
    %div
      = f.submit 'Update', class: 'btn-primary'